<%- include('../partials/header') -%>
<body>
    <div class="ui inverted pointing menu stackable">
      <a href="/" class="item">
        <i class="home icon"></i> Accueil
      </a>

      <a href="/articles" class=" item">
        <i class="file alternate icon"></i> Articles
      </a>
    
      <!-- menu that shows only for the admin -->
      <a href="/users" class="item">
        <i class="user icon"></i> Utilisateurs
      </a>
      
      <a href="/articles/create" class="active item">
        <i class="plus icon"></i> Créer un nouvel article
      </a>
      <!-- Notification icon indicating the user is logged in -->
      <div class="right menu">
        <div class="item">
          <i class="lightbulb lit icon"></i> Connecté
        </div>
        <!-- Option to log out -->
        <a href="/logout" class="item">
          <i class="lock icon"></i> Déconnexion
        </a>
      </div>
    </div>
    <div class="ui one column page grid">
        <div class="column sixteen wide">
            <h1>Nouvel article</h1>
            <form method="POST" action="/articles/create" class="ui large form" enctype="multipart/form-data">
                <div class="ui stacked segment">

                    <div class="field">
                        <label for="title"> <i class="file alternate outline icon"></i>Titre</label>
                        <input type="text" id="title" name="title" required>
                    </div>
                    <div class="field">
                        <label for="summary"> <i class="pencil icon"></i> Résumé</label>
                        <textarea id="summary" name="summary" required></textarea>
                    </div>
                    <div class="field">
                        <label for="content"><i class="file text outline icon"></i> Contenu</label>
                        <textarea id="content" name="content" required></textarea>
                    </div>
                    <div class="field">
                        <label for="tags"><i class="tags icon"></i> Tags (séparés par des virgules)</label>
                        <input type="text" id="tags" name="tags" placeholder="crime,mystery">
                    </div>
                    <div class="field">
                        <label for="hasQCM"><i class="question icon"></i>Dispose d'un QCM</label>
                        <input type="checkbox" id="hasQCM" name="hasQCM">
                    </div>

                    <div class="field">
                        <label for="photos"><i class="camera icon"></i> Photos</label>
                        <input type="file" id="photos" name="photos" accept="image/*" multiple>
                    </div>


                    <button class="ui fluid large teal submit button" type="submit">Créer un article</button>
                </div>
            </form>
        </div>
        
    </div>

    <%- include('../partials/footer') -%>